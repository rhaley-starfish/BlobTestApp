@model UploadImage

@{
    
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    
    <form class="form-horizontal" asp-controller="Home" asp-action="UploadImage" method="POST" enctype="multipart/form-data">
    
        <input type="file" asp-for="ImageFile">
        <input type="text" asp-for="ImageName">
        <input type="text" asp-for="ImageDescription">
    
        <input type="submit"/>
    </form>
    
    <a href="Home/ListBlobs">This is the list of blobs</a>
</div>